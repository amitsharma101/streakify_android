<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:statusBarColor">@color/colorTopBackGround</item>

        <!--
        <item name="android:dropDownListViewStyle">@style/TestSpinnerStyle</item>-->
        <!--
                <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
        -->

    </style>
    <!--  <style name="spinnerTheme" parent="AppTheme">
          <item name="spinnerDropDownItemStyle">@style/spinnerTheme</item>
      </style>-->

    <style name="spinnerTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorLightTextColor</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="TextViewStyle.MEDIUM" parent="TextViewStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!--  Customize theme for Button  -->
    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="backgroundTint">@null</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="streak_card_list_title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="punch_button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawableTint">@color/colorWhite</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="punch_in_buttom" parent="punch_button">
        <item name="android:background">@drawable/rectangle_circle_corner_green</item>
        <item name="android:drawableStart">@drawable/ic_plus_24</item>
    </style>

    <style name="punch_out_buttom" parent="punch_button">
        <item name="android:background">@drawable/rectangle_circle_corner_red</item>
        <item name="android:drawableStart">@drawable/ic_cross_24</item>
    </style>

    <!--  Customize theme for TextInputLayout  -->
    <style name="TextInputStyle" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="TextViewStyle.BOLD" parent="TextViewStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="accept_reject_btn">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
    </style>

    <!--  Customize theme for Search View  -->
    <style name="SearchViewStyle">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">Search...</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/rounded_rectangle_filled_grey_stroke</item>
        <item name="android:textColorHint">@color/colorPrimary</item>

    </style>

    <style name="AddPartySearch" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="customTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>